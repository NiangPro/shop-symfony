{% extends 'base.html.twig' %} {% block title %}Liste utilisateur {% endblock %}
{% block body %}
<h1 class="text-center">Liste des utilisateur</h1>

<table class="table">
  <thead>
    <tr>
      <th>Prénom</th>
      <th>Nom</th>
      <th>Tel</th>
      <th>Adresse</th>
      <th>Email</th>
      <th>Login</th>
      <th>Roles</th>
      <th>actions</th>
    </tr>
  </thead>
  <tbody>
    {% for user in users %}
    <tr>
      <td>{{ user.nom }}</td>
      <td>{{ user.prenom }}</td>
      <td>{{ user.phone }}</td>
      <td>{{ user.adresse }}</td>
      <td>{{ user.email }}</td>
      <td>{{ user.username }}</td>
      <td>
        {% for role in user.roles %} {% if role == 'ROLE_ADMIN' %}
        Administrateur {% elseif role == 'ROLE_USER' %} Employé {% endif %} {%
        endfor %}
      </td>
      <td>
        <a
          href="{{ path('user_show', { id: user.id }) }}"
          class="btn btn-violet"
          >Afficher</a
        >
        <a
          href="{{ path('user_edit', { id: user.id }) }}"
          class="btn btn-yellow"
          >Modifier</a
        >
      </td>
    </tr>
    {% else %}
    <tr>
      <td colspan="10">Pas d'utilisateur pour l'instant</td>
    </tr>
    {% endfor %}
  </tbody>
</table>

<a href="{{ path('user_new') }}" class="btn btn-outline-success"
  >Ajouter un utilisateur</a
>
{% endblock %}
