{% extends 'base.html.twig' %} {% block title %}User{% endblock %} {% block body
%}
<div class="container col-md-5">
  <h1>Utilisateur</h1>

  <table class="table">
    <tbody>
      <tr>
        <th>Nom</th>
        <td>{{ user.nom }}</td>
      </tr>
      <tr>
        <th>Prénom</th>
        <td>{{ user.prenom }}</td>
      </tr>
      <tr>
        <th>Tel</th>
        <td>{{ user.phone }}</td>
      </tr>
      <tr>
        <th>Adresse</th>
        <td>{{ user.adresse }}</td>
      </tr>
      <tr>
        <th>Email</th>
        <td>{{ user.email }}</td>
      </tr>
      <tr>
        <th>Login</th>
        <td>{{ user.username }}</td>
      </tr>
      <tr>
        <th>Rôles</th>
        <td>
          {% for role in user.roles %} {% if role == 'ROLE_ADMIN' %}
          Administrateur {% elseif role == 'ROLE_EDITOR' %} Editeur {% elseif
          role == 'ROLE_USER' %} Employé {% endif %} {% endfor %}
        </td>
      </tr>
    </tbody>
  </table>

  <a href="{{ path('user_index') }}" class="btn btn-violet"
    >Retour à la liste</a
  >

  <a href="{{ path('user_edit', { id: user.id }) }}" class="btn btn-yellow"
    >Modifier</a
  >
  <br /><br />
  {{ include("user/_delete_form.html.twig") }}
</div>
{% endblock %}
