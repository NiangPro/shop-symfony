{% extends 'base.html.twig' %} {% block title %}Hello EmployedController!{%
endblock %} {% block body %}
<div class="container">
  {% if app.user %}
  <div class="row mt-5">
    <!-- Partie gauche -->
    <div class="col-md-4 col-xs-12">
      <h3>Operation</h3>
      {{ form_start(form) }}
      {{ form_widget(form) }}
      <button type="submit" class="btn btn-violet">Ajouter</button>
      {{ form_end(form) }}
    </div>
    <!-- Partie droite -->
    <div class="col-md-8 col-xs-12">
      <!-- Entête -->
      <div class="row gutters">
        <!-- image -->
        <div class="col-md-6">
          <img src="/images/logo.svg" alt="" width="250" />
        </div>
        <!-- date -->
        <div class="col-md-6">
          <div class="row">
            <div class="col-md-3">Date :</div>
            <div class="col-md-8">{{ date |date("m/d/Y  H:i:s")}}</div>
          </div>
          <div class="row mt-3">
            <div class="col-md-12">
              <table class="table table-bordered">
                <tr>
                  <td>
                    <h6>Nom du client : Bassirou Niang</h6>
                    <h6>Tel: 77 720 87 16</h6>
                  </td>
                </tr>
              </table>
            </div>
          </div>
          <div class="row">
            <div class="col-md-4">
              <h4><u>Facture</u></h4>
            </div>
            <div class="col-md-5">
              <h4>N° 8411</h4>
            </div>
          </div>
          <div class="row">
            <div class="col-md-4">Facturé par</div>
            <div class="col-md-8">{{ app.user.prenom }} {{ app.user.nom }}</div>
          </div>
        </div>
      </div>
      <!-- Produit -->
      <div class="row mt-2">
        <div class="col-md-12">
          <table class="table table-bordered table-striped">
            <thead class="text-center">
              <th>Qté</th>
              <th>Désignation</th>
              <th>P.U</th>
              <th>Montant</th>
            </thead>
            <tbody class="text-center">
              <tr>
                <td>1.00</td>
                <td>Huile</td>
                <td>500</td>
                <td>500</td>
              </tr>
              <tr>
                <td>1.00</td>
                <td>Riz</td>
                <td>500</td>
                <td>500</td>
              </tr>
              <tr>
                <td>1.00</td>
                <td>Farine</td>
                <td>500</td>
                <td>500</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      <!-- Montant total -->
      <div class="row mt-2">
        <div class="col-md-12">
          <table class="table table-striped table-bordered text-center">
            <tr>
              <th>Total</th>
              <th>Paiement</th>
              <th>Monnaie</th>
              <th>Restant</th>
            </tr>
            <tr>
              <td>75800 F</td>
              <td>75800 F</td>
              <td>75800 F</td>
              <td>75800 F</td>
            </tr>
          </table>
        </div>
      </div>
      <!-- Signature -->
      <div class="row mt-5 mb-2">
        <div class="col-md-6"><u>Client</u> :</div>
        <div class="col-md-6"><u>Guichetier</u> :</div>
      </div>
      <!-- Remerciements -->
      <div class="row">
        <div class="col-md-12 text-center mt-3">
          MERCI DE VOTRE CONFIANCE Â BIENTÔT !!!
        </div>
      </div>
    </div>
  </div>
  {% else %}
  <h2 class="text-center mt-5">
    Bienvenu cher <span class="badge badge-warning">Employé</span>
  </h2>

  {% endif %}
</div>
{% endblock %}
