{% extends "base.html.twig" %} {% block title %} {{ parent() }}-->Boutique {%
endblock title %} {% block body %}
<div class="container mt-4">
  {% if status == "present" %}
  <div class="row">
    <div class="col-md-3">
      <h5 class="text-center">Nouvelle vente</h5>
      {{ form_start(form) }}
      {{ form_widget(form) }}
      <button type="submit" class="btn btn-violet">Valider</button>
      {{ form_end(form) }}
    </div>
    <div class="col-md-5 ml-auto">
      <div class="card cascade">
        <div class="card-heading text-center">
          <h2 class="text-center">
            <u><u>Information de l'employe</u></u>
          </h2>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6"><h4>Numéro Vente :</h4></div>
            <div class="col-md-6">
              <h5>{{ vente.nomVente }}</h5>
            </div>
          </div>

          <div class="row">
            <div class="col-md-8"><h4>Heure de création :</h4></div>
            <div class="col-md-4">
              <h5>
                {{ vente.createdAt ? vente.createdAt|date('H:i:s') : '' }}
              </h5>
            </div>
          </div>
          <div class="row">
            <div class="col-md-8">
              <h4>Date de fermeture :</h4>
            </div>
            <div class="col-md-4">
              <h5>
                {{ vente.closeAt ? vente.closeAt|date('d/m/Y') : '' }}
              </h5>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <h4>Prénom :</h4>
            </div>
            <div class="col-md-6">
              <h5>{{ vente.prenomEmploye }}</h5>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6"><h4>Nom :</h4></div>
            <div class="col-md-6">
              <h5>{{ vente.nomEmploye }}</h5>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6"><h4>N° telephone :</h4></div>
            <div class="col-md-6">
              <h5>{{ vente.numEmploye }}</h5>
            </div>
          </div>
        </div>
        <div class="card-footer">
          <div class="row">
            <div class="col-md-7">
              <h3>Montant Total :</h3>
            </div>
            <div class="col-md-5">
              <h3>
                <span class="badge badge-success">{{
                  vente.formattedMontant
                }}</span>
              </h3>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  {% elseif status == "passed" %}
  <div class="alert alert-success text-center">
    Veuillez créer une nouvelle vente
    <a href="{{ path('vente_new') }}" class="btn btn-violet"> Cliquez ici</a>
  </div>
  {% elseif status == "aucun" %}
  <div class="alert alert-success text-center">
    Aucun vente disponible pour le moment
    <a href="{{ path('vente_new') }}" class="btn btn-violet">
      Cliquez ici pour créer</a
    >
  </div>
  {% endif %}
</div>
{% endblock %}
