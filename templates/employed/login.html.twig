{% extends "base.html.twig" %}

{% block title %} Connexion {% endblock %}

{% block body %}
    
    <div class="container col-md-3 mt-4">
        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey | trans(error.messagedata, 'security') }}
            </div>
        {% endif %}
        <h3 class="text-center">Connexion</h3>
        <form action="{{ path("login") }}" method="post">
            <div class="form-group">
                <label for="_login">Login</label>
                <input type="text" placeholder="Entrez votre login..." required name="_username" class="form-control">
            </div>
            <div class="form-group">
                <label for="_password">Mot de passe</label>
                <input type="password" placeholder="Entrez votre mot de passe..." required name="_password" class="form-control">
            </div>
            <button type="submit" class="btn btn-yellow">Se connecter</button>
        </form>
    </div>
{% endblock %}