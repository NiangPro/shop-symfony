        <th>Tel</th>
        <th>Emprunt</th>
        <th>Monnaie</th>
        <th>actions</th>
      </tr>
    </thead>
    <tbody>
      {% for client in clients %}
      <tr>
        <td>{{ client.id }}</td>
        <td>{{ client.prenom }}</td>
        <td>{{ client.nom }}</td>
        <td>{{ client.phone }}</td>
        <td>{{ client.emprunt }} F cfa</td>
        <td>{{ client.monnaie }} F cfa</td>
        <td>
          <a
            href="{{ path('client_show', { id: client.id }) }}"
            class="btn btn-violet"
            >Afficher</a
          >
          <a
            href="{{ path('client_edit', { id: client.id }) }}"
            class="btn btn-yellow"
            >Modifier</a
          >
        </td>
      </tr>
      {% else %}
      <tr>
        <td colspan="7">Pas de client pour l'instant</td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
  <br /><br />
  <a href="{{ path('client_new') }}" class="btn btn-outline-success"
    >Ajouter un nouveau client</a
  >
</div>
{% endblock %}
